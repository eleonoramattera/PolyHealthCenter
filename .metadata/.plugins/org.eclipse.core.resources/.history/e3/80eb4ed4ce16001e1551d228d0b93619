package PolyHealthCenter.configuration;

import java.time.LocalDate;
import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Component;

import com.github.javafaker.Faker;

import PolyHealthCenter.model.Prenotazione;
import PolyHealthCenter.service.UtenteService;

@Component
public class PrenotazioneConfiguration {


	@Autowired UtenteService service;
	
	@Bean("PrenotazioneFake")
	@Scope("prototype")
	public Prenotazione PrenotazioneRandom() {			
		
		Faker fake = new Faker();
		return Prenotazione.builder()
				.dataPrenotazione(LocalDate.of(fake.number().numberBetween(2022, 2023),fake.number().numberBetween(1, 12), fake.number().numberBetween(1, 28)))
				.utente(service.getUtenteRandom())
				.terapia(null)
				.build();
	}
}
